<UserControl x:Class="SPlayer.musicList"
             x:Name="musicItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SPlayer"
             mc:Ignorable="d" 
            >
    <Grid>
        <StackPanel x:Name="No_Name" Orientation="Horizontal">
            <TextBlock x:Name="Count" Text="01" Margin="5 0 0 0" VerticalAlignment="Center"/>
            <Ellipse x:Name="Cover" Margin="15,0" Width="30" Height="30" VerticalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush x:Name="list_Cover" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:Name="lblTrack_Name" Text="" VerticalAlignment="Center" Width="145" TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="lblDuration_Track" Text="4:56" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,1,0" />

        </StackPanel>
    </Grid>
</UserControl>
